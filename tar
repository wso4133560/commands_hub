# 压缩tar.gz命令
tar zcvf [*.tar.gz] [文件夹]

# 解压tar.gz命令
tar xvf [*.tar.gz]

# 压缩命令tar.xz命令
tar cfJ [*.tar.xz] [目标文件夹]

# 解压tar.xz命令
tar -xvJf [*.tar.xz]

# 解压tar.bz2文件
tar jxvf [FileName.tar.bz2]

# 多线程压缩命令
sudo apt-get install pigz
pigz -p <number_of_threads> <input_file>

# 多线程解压命令
pigz -d <input_file.gz>
